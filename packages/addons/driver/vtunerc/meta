PKG_NAME="vtunerc"
PKG_VERSION="2.0"
PKG_REV="0"
PKG_ARCH="any"
PKG_LICENSE="GPL"
PKG_SITE="http://code.google.com/p/vtuner/"
[ "$TARGET_ARCH" = "i386" ] && PKG_URL="http://vtuner.googlecode.com/files/vtunerc.i686"
[ "$TARGET_ARCH" = "x86_64" ] && PKG_URL="http://vtuner.googlecode.com/files/vtunerc.x86_64"
PKG_DEPENDS=""
PKG_BUILD_DEPENDS=""
PKG_PRIORITY="optional"
PKG_SECTION="driver/dvb"
PKG_SHORTDESC="vtuner allows access DVB devices over the network."
PKG_LONGDESC="vtuner allows access DVB devices over the network."
PKG_IS_ADDON="yes"
PKG_ADDON_TYPE="xbmc.python.script"
PKG_AUTORECONF="no"
